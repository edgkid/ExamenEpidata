		String stringValue = "";
		try {
			
			stringValue = br.readLine();
			System.out.print(stringValue);
			
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		if (stringValue.equals("f")) {
			System.out.println("Muchas gracias....");
		}else {
			this.showTestInfo();
			this.questionFromTestTwo();
		}
		
